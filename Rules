#!/usr/bin/env ruby

require "./lib/filters/markdown_with_pygments.rb"

compile '/**/*.haml' do
  filter :haml
  layout '/default.*'
  filter :relativize_paths, type: :html
end

# This is an example rule that matches Markdown (.md) files, and filters them
# using the :kramdown filter. It is commented out by default, because kramdown
# is not bundled with Nanoc or Ruby.

compile '/**/*.md' do
  filter :pygmented_md
  filter :colorize_syntax, :default_colorizer => :pygmentsrb
  filter :link_to_commit
  layout '/default.*'
  filter :relativize_paths, type: :html
end

# For `html` or `md` files,
# IF it is `index.something`, then it can be accessed by `/` or `/index.html`
# ELSE
# It is `/item.identifier.without_ext/(index.html)`
route '/**/*.{html,md,haml}' do
  if item[:permalink]
    item[:permalink]
  elsif item.identifier =~ '/index.*'
    '/index.html'
  elsif item.identifier =~ '/404.*'
    '/404.html'
  else
    item.identifier.without_ext + '/index.html'
  end
end

compile '/**/*.{css}' do
  write "/public/css#{item.identifier}" # identifier contains '/'
  filter :relativize_paths, type: :css
end

compile '/**/*' do
  write item.identifier.to_s
end

layout '/**/*', :haml
